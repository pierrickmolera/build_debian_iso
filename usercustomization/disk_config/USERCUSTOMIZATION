# <type> <mountpoint> <size>   <fs type> <mount options> <misc options>

# entire disk with LVM, separate /home

disk_config disk1 disklabel:gpt fstabkey:uuid align-at:1M

primary /boot/efi  512M  vfat    rw
primary -          100G	 -       -
primary -          12G	 -       -

disk_config lvm

vg vg1  disk1.2
vg1-root    /           60G      ext4    noatime,rw
vg1-varlog  /var/log    15G      ext4    noatime,rw
vg1-swap    swap        8G      swap    sw

vg vg_ceph  disk1.3
vg_ceph-lv_ceph -           1G   -       -
